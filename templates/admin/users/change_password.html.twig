{% extends 'admin/base.html.twig' %}

{% block title %}Change Password{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Change Password for {{ user.firstName }} {{ user.lastName }}</h1>

    {{ form_start(form, {'attr': {'class':'mt-3'}}) }}
        <div class="mb-3">
            {{ form_label(form.password) }}
            {{ form_widget(form.password, {'attr': {'class':'form-control'}}) }}
            {{ form_errors(form.password) }}
        </div>
        <button class="btn btn-warning"  type="submit">Update Password</button>
        <a href="{{ path('admin_users') }}" class="btn btn-secondary">Cancel</a>
     {{ form_end(form) }}
</div>
{% endblock %}
