{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- Welcome Card -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="jumbotron text-center bg-light p-5 rounded shadow-sm">
                <h1 class="display-4">Welcome, {{ user.firstname }}!</h1>
                <p class="lead">You are logged in successfully.</p>
                <a href="{{ path('logout') }}" class="btn btn-danger btn-lg mt-3">Logout</a>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Orders</h5>
                    <p class="card-text display-5">12</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Clients</h5>
                    <p class="card-text display-5">8</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Messages</h5>
                    <p class="card-text display-5">5</p>
                </div>
            </div>
        </div>
    </div>

  
</div>
{% endblock %}
